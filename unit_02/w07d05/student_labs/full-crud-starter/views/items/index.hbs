<a href="/users/{{user.id}}/">{{user.first_name}}</a>
<h1>{{user.first_name}}'s Items</h1>
<a href="/users/{{user.id}}/items/new">New Item for {{user.first_name}}</a>
<ol>
	{{#each user.items}}
		<li><a href="/users/{{../user.id}}/items/{{this.id}}/edit">{{this.name}}</a></li>
		<ul>
			<li>In Progress: {{this.in_progress}}</li>
		</ul>
		<div>
			<form action="/users/{{../user.id}}/items/{{this.id}}?_method=DELETE" method="POST">
				<input type="submit" value="Delete Item">
			</form>
		</div>
	{{/each}}
</ol>