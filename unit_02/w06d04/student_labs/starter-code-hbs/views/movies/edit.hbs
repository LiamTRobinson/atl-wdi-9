<h1>Edit</h1>
<form id="new" action="/movies/{{movie.id}}?_method=PUT" method="POST">
	<div class="form">
		<label for="title">Title:</label>
		<input type="text" name="title" value="{{movie.title}}">
	</div>
	<div class="form">
		<label for="viewed">Viewed? (true/false)</label>
		<input type="text" name="viewed" value="{{movie.viewed}}" />
	</div>
	<div class="form">
		<input type="submit" value="Submit Changes"/>
	</div>
</form>